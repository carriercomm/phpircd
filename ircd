#!/usr/bin/php -q
<?php

require("core.class.php");
$core = new core('config.ini');

echo "listening for new clients\n";
while(true){
	if(($new = @socket_accept($core->_socket)) !== FALSE){
        	echo "new client\n";
                $core->_clients[] = $new;
                var_dump($core->_clients);
        }
        usleep(700);
}

?>
